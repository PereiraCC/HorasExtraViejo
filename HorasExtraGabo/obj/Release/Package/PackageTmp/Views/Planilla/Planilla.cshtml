@using HorasExtraGabo.Models
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Informes | Encargado Planillas</title>
    <link rel="stylesheet" href="/css/planillas.css">
    <link rel="stylesheet" href="/css/fontello.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header">
        <div class="container">

            <div class="btn-menu">
                <label for="btn-menu" class="icon-menu"></label>
            </div>
            <div class="logo">
                <a href="../Home/Index" title="Logout"><img src="~/media/logo.jpg" alt=""></a>
            </div>
            <nav class="menu" style="background-color: #092A5B;">
                <a href="#">@Session["Rol"]</a>
                <a href="#">@Session["nombre"]</a>
            </nav>
        </div>
    </header>

    <div class="cuerpo">
        <br><br>
        <div class="col-1">
            <h1>Informes</h1><br><br>
            <div class="formu" style="">
                @using (Html.BeginForm("planillas", "Planilla"))
                {
                    <form method="post" action="planillas" id="form">
                        <input class="txt-pro" type="date" name="fechaInicio" placeholder="Mes">
                        <input class="txt-pro" type="date" name="fechaFinal" placeholder="al mes">
                        <select class="txt-pro" placeholder="Departamento" name="departamento">
                            <option>Departamento</option>
                            <option>TI</option>
                            <option>Logística</option>
                        </select>
                        <br><br>
                        <input type="submit" class="btn" value="Solicitar">
                    </form>
                }
            </div>
        </div>

        <div class="col-3">
            <a href="/Planilla/Planilla" class="">Refrescar</a>
            <table id="tabla" style="margin-top:-3%;">
                <br>
                <br>
                <thead>
                <th>Departamento</th>
                <th>Mes</th>
                <th id="idFun">Estado</th>
                <th>Total Horas/Mes</th>
                <th>Tipo de Pago</th>
                </thead>
                <tbody>
                    @using (Html.BeginForm("", ""))
                    {
                        if (ViewBag.datos != null)
                        {
                            for (int yx = 0; yx < 5; yx++)
                            {
                                <tr class="tds">
                                    <td>@ViewBag.datos[yx, 0]</td>
                                    <td>@ViewBag.datos[yx, 1]</td>
                                    <td id="idFun">@ViewBag.datos[yx, 2]</td>
                                    <td>@ViewBag.datos[yx, 3]</td>
                                    <td>@ViewBag.datos[yx, 4]</td>
                                    <!-- <td><button>Cargar</button></td>-->
                                </tr>
                            }
                        }
                    }
                </tbody>
                <tbody></tbody>
            </table>
        </div>
        <div class="col-1">
            <br>

            <!--  <button class="btn">Enviar </button> -->
        </div>
    </div>

    <input type="checkbox" id="btn-menu">
    <div class="container-menu">
        <div class="cont-menu">
            <nav>
                <br>
                <a href="#"></a>
                <br>
                <a href="#"></a>
                <br>
            </nav>
            <label for="btn-menu" class="icon-equis"></label>
        </div>
    </div>

</body>

</html>
